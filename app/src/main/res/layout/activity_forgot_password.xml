<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@null"
            android:contentDescription="Go back"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_wh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:gravity="center"
            android:text="Quên mật khẩu"
            android:textColor="@color/white_color"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Nhập Email hoặc Số điện thoại của bạn để nhận mã xác minh"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input"
        android:hint="Email hoặc số điện thoại"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_primary_button"
        android:gravity="center"
        android:text="Tiếp tục"
        android:textColor="@color/white_color"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>